<mvc:View controllerName="org.ubb.books.controller.BookList" 
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns:core="sap.ui.core" 
    xmlns="sap.m">

    <Button icon="sap-icon://add" text="Add new book" press="onAdd"/>
    <Button icon="sap-icon://edit" text="Update book" press="onUpdate"/>
    <Button icon="sap-icon://bullet-text" text="See checked out books" press="onSeeCheckedOut"/>
    <ToolbarSpacer/>
    <Button icon="sap-icon://add" text="Check selected book out" press="handleCheckOutBook"/>
    <ToolbarSpacer/>
    <Button icon="sap-icon://sorting-ranking" tooltip="Sort ascending across Categories and Name" press="sortCategoriesAndName"/>
    <Button icon="sap-icon://sort" tooltip="Sort Categories" press="sortISBN"/>
    <Button icon="sap-icon://decline" tooltip="Clear all sortings" press="clearAllSortings"/>
    <ToolbarSpacer/>
    <Button icon="sap-icon://delete" text="Delete book" press="onDelete"/>
    
    <Table id="idBooksTable" items="{
			path: '/BOOKS',
			sorter: {
				path: 'ISBN'
			}
		}" mode="SingleSelectLeft" growing="true" growingThreshold="10">
        <headerToolbar>
            <Toolbar>
                <content>
                    <Input id="inputISBN" width="20%" placeholder="{i18n>isbn}"/>
                    <Input id="inputTitle" width="20%" placeholder="{i18n>title}"/>
                    <Input id="inputAuthor" width="20%" placeholder="{i18n>author}"/>
                    <DatePicker id="inputDateStart" width="20%" value=""/>
                    <DatePicker id="inputDateEnd" width="20%" value=""/>
                    <Input id="inputLanguage" width="20%" placeholder="{i18n>language}"/>
                    <Button text="{i18n>filter}" press="onSearchButtonPressed" enabled="true" />
                    <Button press="onSortButtonPressed" text="{i18n>sort}" icon="sap-icon://drop-down-list" tooltip="{i18n>sort}" />
                </content>
            </Toolbar>
        </headerToolbar>

        <columns>
            <Column id="isbn" sortProperty="ISBN">
                <Text text="{i18n>isbn}"/>
            </Column>
            <Column id="title" sortProperty="Title">
                <Text text="{i18n>title}"/>
            </Column>
            <Column id="author" showSortMenuEntry="false" sortProperty="Author">
                <Text text="{i18n>author}"/>
            </Column>
            <Column id="published" sortProperty="PublishedDate">
                <Text text="{i18n>publOn}"/>
            </Column>
            <Column id="language" sortProperty="Language">
                <Text text="{i18n>language}"/>
            </Column>
            <Column>
                <Text text="{i18n>avBooks}"/>
            </Column>
            <Column>
                <Text text="{i18n>totBooks}"/>
            </Column>
            <Column>
                <Text text="{i18n>createdOn}"/>
            </Column>
            <Column>
                <Text text="{i18n>createdBy}"/>
            </Column>
            <Column>
                <Text text="{i18n>changedOn}"/>
            </Column>
            <Column>
                <Text text="{i18n>changedBy}"/>
            </Column>

        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <ObjectIdentifier text="{ISBN}"/>
                    <Text text="{TITLE}"/>
                    <Text text="{AUTHOR}"/>
                    <Text text="{
							path: 'DATE_PUBLISHED',
							type: 'sap.ui.model.type.Date'
               			}" />
                    <Text text="{LANGUAGE}"/>
                    <Text text="{AVAILBLE_BOOKS}"/>
                    <Text text="{TOTAL_NUMBER}"/>
                    <Text text="{CREATED_ON}"/>
                    <Text text="{CREATED_BY}"/>
                    <Text text="{CHANGED_ON}"/>
                    <Text text="{CHANGED_BY}"/>
                    <!-- <Text text="{= parseInt(${AVAILBLE_BOOKS}) }"/>
                    <Text text="{= parseInt(${TOTAL_NUMBER}) }"/>
                    <Text text="{= parseInt(${CREATED_ON}) }"/>
                    <Text text="{= parseInt(${CREATED_BY}) }"/>
                    <Text text="{= parseInt(${CHANGED_ON}) }"/>
                    <Text text="{= parseInt(${CHANGED_BY}) }"/> -->
                </cells>
            </ColumnListItem>
        </items>
    </Table>

</mvc:View>